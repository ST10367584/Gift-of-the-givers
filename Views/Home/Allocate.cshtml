@model Gift_of_the_givers.Models.ResourceAllocation

@{
    ViewData["Title"] = "Allocate Resources";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center"><i class="fas fa-boxes"></i> Allocate Resources to Disaster</h4>
            </div>
            <div class="card-body">
                <partial name="_NotificationPartial" />

                <form asp-action="Allocate" method="post">
                    <div class="mb-3">
                        <label asp-for="DisasterID" class="form-label">Disaster *</label>
                        <select asp-for="DisasterID" class="form-select" required>
                            <option value="">Select Disaster</option>
                            @foreach (var disaster in ViewBag.Disasters)
                            {
                                <option value="@disaster.DisasterID">@disaster.Title - @disaster.Location</option>
                            }
                        </select>
                        <span asp-validation-for="DisasterID" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ResourceType" class="form-label">Resource Type *</label>
                                <select asp-for="ResourceType" class="form-select" required>
                                    <option value="">Select Type</option>
                                    <option value="Food">Food</option>
                                    <option value="Water">Water</option>
                                    <option value="Medical">Medical Supplies</option>
                                    <option value="Shelter">Shelter Materials</option>
                                    <option value="Clothing">Clothing</option>
                                    <option value="Hygiene">Hygiene Kits</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="ResourceType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Unit" class="form-label">Unit *</label>
                                <select asp-for="Unit" class="form-select" required>
                                    <option value="kg">Kilograms (kg)</option>
                                    <option value="liters">Liters</option>
                                    <option value="boxes">Boxes</option>
                                    <option value="units">Units</option>
                                    <option value="packs">Packs</option>
                                    <option value="kits">Kits</option>
                                </select>
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="ItemName" class="form-label">Item Name *</label>
                                <input asp-for="ItemName" class="form-control" placeholder="e.g., Rice, Water Bottles, First Aid Kits">
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Quantity" class="form-label">Quantity *</label>
                                <input asp-for="Quantity" type="number" class="form-control" min="1" value="1">
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional information about this allocation"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Allocate Resources
                        </button>
                        <a href="/ResourceAllocation" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}