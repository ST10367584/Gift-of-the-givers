@model Gift_of_the_givers.Models.DashboardViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center rounded-3 mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Bringing Hope to Humanity</h1>
        <p class="lead">Join us in making a difference during disasters and emergencies</p>
        <div class="mt-4">
            <a href="/Donation/Create" class="btn btn-light btn-lg me-3"><i class="fas fa-donate"></i> Donate Now</a>
            <a href="/Volunteer/Register" class="btn btn-outline-light btn-lg"><i class="fas fa-users"></i> Become a Volunteer</a>
        </div>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-5">
    <div class="col-md-3">
        <div class="stats-card text-center">
            <i class="fas fa-exclamation-triangle fa-2x text-warning mb-3"></i>
            <h3>@Model.ActiveDisasters</h3>
            <p class="text-muted">Active Disasters</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card text-center">
            <i class="fas fa-users fa-2x text-primary mb-3"></i>
            <h3>@Model.TotalVolunteers</h3>
            <p class="text-muted">Volunteers</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card text-center">
            <i class="fas fa-donate fa-2x text-success mb-3"></i>
            <h3>@Model.TotalDonations.ToString("C")</h3>
            <p class="text-muted">Donations Received</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card text-center">
            <i class="fas fa-hands-helping fa-2x text-info mb-3"></i>
            <h3>@Model.LivesImpacted</h3>
            <p class="text-muted">Lives Impacted</p>
        </div>
    </div>
</div>

<!-- Features -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Report Disasters</h5>
                <p class="card-text">Report emergency situations and help us respond quickly to those in need.</p>
                <a href="/Disaster/Create" class="btn btn-outline-warning">Report Incident</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-donate fa-3x text-success mb-3"></i>
                <h5 class="card-title">Make a Donation</h5>
                <p class="card-text">Support our relief efforts with financial contributions or essential supplies.</p>
                <a href="/Donation/Create" class="btn btn-outline-success">Donate Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Join as Volunteer</h5>
                <p class="card-text">Offer your time and skills to help communities affected by disasters.</p>
                <a href="/Volunteer/Register" class="btn btn-outline-primary">Volunteer Now</a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Disasters -->
<div class="mt-5">
    <h3 class="mb-4">Recent Disaster Alerts</h3>
    <div class="row">
        @foreach (var disaster in Model.RecentDisasters)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title">@disaster.Title</h5>
                            <span class="badge bg-@(disaster.Severity >= 4 ? "danger" : disaster.Severity >= 3 ? "warning" : "info")">
                                Severity: @disaster.Severity/5
                            </span>
                        </div>
                        <p class="card-text">@disaster.Location - @disaster.DisasterType</p>
                        <small class="text-muted">Reported: @disaster.CreatedDate.ToString("MMM dd, yyyy")</small>
                        <a href="/Disaster/Details/@disaster.DisasterID" class="btn btn-sm btn-outline-primary float-end">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>